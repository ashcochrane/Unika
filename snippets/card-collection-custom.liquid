{% comment %}
  Renders a collection card

  Accepts:
  - card_collection: {Object} Collection Liquid object
  - style: {String} Default, Secondary

  Usage:
  {% render 'card-collection-custom' %}
{% endcomment %}

{%- style -%}
  .custom_card_inner {
    padding: 20px;
    display: flex;
    flex-direction: column; /* Ensures content stacks vertically */
    justify-content: space-between;
  }

  .custom-card-title {
    padding-left: 8px;
    border-left: 5px solid red;
    font-weight: bold;
  }

  .custom-card-body {
    padding-left: 8px;
  }

  .custom-card-footer {
    padding-left: 8px;
  }

  .custom-card-button {
    font-weight: 600;
  }
{%- endstyle -%}

<div class="custom-card-wrapper">
  <div
    class="
      card custom_card_inner
      {% if style == 'secondary' %} secondary-card {% else %} color-{{ settings.card_color_scheme }} {% endif %} gradient
    "
  >
    <div class="custom-card-header">
      <h2 class="custom-card-title">
        {% if card_collection.title != blank %}
          {% assign words = card_collection.title | escape | upcase | split: ' ' %}
          <span class="title-wrapper">
            {% for word in words %}
              <span class="title-word">{{ word }}</span>
              {%- unless forloop.last %}<br>{% endunless %}
            {% endfor %}
          </span>
        {% else %}
          {{ 'onboarding.collection_title' | t }}
        {% endif %}
      </h2>
    </div>
    <div class="custom-card-body">
      <span class="custom-card-description">{{ card_collection.description }}</span>
    </div>
    <div class="custom-card-footer animate arrow">
      <button
        class="
          custom-card-button
          button
          {% if style == 'default' %} default-style {% else %} secondary-style {% endif %}
        "
      >
        SEE MORE
        <span class="custom-icon-wrap">
          {{- 'icon-arrow.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  </div>
</div>
